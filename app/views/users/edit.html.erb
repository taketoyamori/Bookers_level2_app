

<div class="container">
  <div class="row">
    <div class="col-7 m-auto">
      <h1>User info</h1>
      <%= form_with model: @user, local:true do |f| %>

        <% if @user.errors.any? %>
          <div class="text-danger">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>

            <ul>
              <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>


       <p>Name</p>
       <%= f.text_field :name, class: "form-control input-lg" %>
       <p class="mt-3">Image</p>
       <%= f.attachment_field :profile_image %>
       <p class="mt-3">Introduction</p>
       <%= f.text_area :introduction, class: "form-control input-lg" %>
       <%= f.submit 'Update User', class: "btn btn-secondary mt-3" %>
      <% end %>
    </div>
  </div>
</div>