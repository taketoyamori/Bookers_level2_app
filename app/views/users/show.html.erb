<div class="container">
 <div class= "row">
  <div class= "col-md-3 col-sm-12 col-12 m-auto">
    <%= render 'users/list', user: @user %>
  </div>

 <div class= "col-md-8 offset-md-1 col-sm-12 col-12">
  <h1>Books</h1>
  <table class= "table">
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user_id) do %>
           <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "30x30" %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book) do %>
           <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
     </table>
  </div>
 </div>
</div>