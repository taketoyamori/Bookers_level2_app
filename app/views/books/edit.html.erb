<div class="container">
  <div class="row">
    <div class="col-7 m-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, local:true do |f| %>

        <% if @book.errors.any? %>
          <div class="text-danger">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>

            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

      <p class="mt-3">title</p>
      <%= f.text_field :title, class: "form-control input-lg"  %>
      <p class="mt-3">Opinion</p>
      <%= f.text_area :body, class: "form-control input-lg"  %>
      <%= f.submit 'Update Book', class: "btn btn-success mt-3" %>
      <% end %>
      <p class="mt-3">
         <%= link_to "Show", book_path %> | <%= link_to "back", books_path %>
      </p>
    </div>
  </div>
</div>